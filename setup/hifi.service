[Unit]
Description=Hifi
After=network.target

[Service]
ExecStart=/usr/bin/node /opt/sl-api/server.js
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=hifi
#User=hifi
#Group=hifi
Environment=PATH=/usr/bin/:/usr/local/bin/
Environment=NODE_ENV=production
WorkingDirectory=/opt/hifi

[Install]
WantedBy=multi-user.target